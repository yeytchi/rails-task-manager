<h1>New task</h1>

<form action="/tasks" method="post" class="new-task-form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="new-task-form">
    <label for="title">Task title: </label>
    <input type="text" name="task[title]" id="title" required>
  </div>
  <div class="new-task-form">
    <label for="email">Task details: </label>
    <input type="text" name="task[details]" id="details" required>
  </div>
  <div class="new-task-form">
    <input type="submit" value="Add task!">
  </div>
</form>

<%= link_to "Back to list of tasks", root_path %>

