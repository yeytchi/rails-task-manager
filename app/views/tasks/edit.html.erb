<h1>Edit task</h1>

<%= form_for(@task) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :details %>
    <%= f.text_field :details %>
  <div>
  </div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  <div>
  </div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Back to list of tasks", root_path %>

